<clickhouse>
    <storage_configuration>
        <disks>
            <hdfs_disk>
                <type>hdfs</type>
                <endpoint>hdfs://sp-hdfs:9000/user/sptest/</endpoint>
                <path_prefix>node2</path_prefix>
            </hdfs_disk>
        </disks>

        <policies>
            <hot_and_cold>
                <volumes>
                    <hot>
                        <disk>default</disk>
                    </hot>
                    <cold>
                        <disk>hdfs_disk</disk>
                    </cold>
                </volumes>
            </hot_and_cold>
         </policies>
    </storage_configuration>
</clickhouse>